.contents
  =render 'layouts/side-bar'
  .right-content-group-detail
    .right-content-group-detail__name
      =@group.name
    %a{href: "edit"}
      .right-content-group-detail__edit-botton Edit
    .right-content-group-detail__member-list
      MEMBER:
      -@group.users.each do |user|
        =user.name
  .right-content-main
    - @messages.each do |message|
      .right-content-main-message{ id: message.id, data: { id: message.id } }
        .right-content-main-message__user-name=message.user.name
        .right-content-main-message__date=message.created_at
        - if message.content.present?
          .right-content-main-message__message-text= message.content
        - if message.image.present?
          .right-content-main-message__message-text= image_tag message.image.url

  .form
    .form_mask
      = form_for [@group, @message], html: {id: 'new_message'} do |f|
        = f.text_field :content, class: 'form__mask__text', placeholder: 'type a message'
        = f.submit 'Send', class: 'form__mask__submit-btn'
        = f.label :image, class: 'form__mask__icon' do
          = fa_icon 'picture-o'
          = f.file_field :image, class: 'hidden'
